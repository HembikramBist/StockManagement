@page
@model StockManagement.Presentation.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}
<h1>Dashboard</h1>

<div class="row g-4">
    <!-- Total Products -->
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Total Products</h5>
                <h3 class="display-5 fw-bold">@Model.TotalProducts</h3>
            </div>
        </div>
    </div>

    <!-- Total Users -->
    <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Total Users</h5>
                <h3 class="display-5 fw-bold">@Model.TotalUsers</h3>
            </div>
        </div>
    </div>

    <!-- Total Stock Quantity -->
    <div class="col-md-4">
        <div class="card text-white bg-warning shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Total Stock Quantity</h5>
                <h3 class="display-5 fw-bold">@Model.TotalQuantity</h3>
            </div>
        </div>
    </div>

    <!-- Transactions Today (NEW) -->
    <div class="col-md-4">
        <div class="card text-white bg-info shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Transactions Today</h5>
                <h3 class="display-5 fw-bold">@Model.TransactionsToday</h3>
            </div>
        </div>
    </div>

   
    <div class="col-md-4">
        <div class="card text-white bg-dark shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Today Sales</h5>
                <h3 class="display-5 fw-bold">₹ @Model.TodaySales.ToString("0.00")</h3>
            </div>
        </div>
    </div>
</div>