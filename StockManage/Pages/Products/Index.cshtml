@page
@model StockManagement.Presentation.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<!-- Search -->
<form method="get" class="row mb-3">
    <div class="col-md-4">
        <input asp-for="Search" class="form-control" placeholder="Search product name..." />
    </div>
    <div class="col-md-2">
        <button class="btn btn-secondary">Search</button>
    </div>
</form>

<!-- ADD PRODUCT (ADMIN ONLY) -->
@if (User.IsInRole("Admin"))
{
    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addProductModal">
        Add Product
    </button>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>

            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.id</td>
                <td>@p.ProductName</td>
                <td>@p.Quantity</td>
                <td>@p.Price.ToString("0.00")</td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <button class="btn btn-sm btn-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#editProductModal"
                                data-id="@p.id"
                                data-name="@p.ProductName"
                                data-qty="@p.Quantity"
                                data-price="@p.Price">
                            Edit
                        </button>

                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-id="@p.id"
                              style="display:inline"
                              onsubmit="return confirm('Delete this product?');">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- ADD PRODUCT MODAL -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="addProductModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form method="post" id="addProductForm">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                       
                        <div id="addErrorMessage" class="alert alert-danger d-none mb-3">
                            Please fill in all fields: Product Name, Quantity, and Price.
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Product Name <span class="text-danger">*</span></label>
                            <input asp-for="NewProduct.ProductName" class="form-control" placeholder="Product Name" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Quantity <span class="text-danger">*</span></label>
                            <input asp-for="NewProduct.Quantity" type="number" min="0" class="form-control" placeholder="Quantity" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price <span class="text-danger">*</span></label>
                            <input asp-for="NewProduct.Price" type="number" step="0.01" min="0.01" class="form-control" placeholder="Price" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Save Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- EDIT PRODUCT MODAL -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="editProductModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form method="post" asp-page-handler="Edit">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" asp-for="EditProduct.id" />
                        <input asp-for="EditProduct.ProductName" class="form-control mb-2" />
                        <input asp-for="EditProduct.Quantity" type="number" class="form-control mb-2" />
                        <input asp-for="EditProduct.Price" type="number" step="0.01" class="form-control" />
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-success">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        const addForm = document.getElementById('addProductForm');
        const addError = document.getElementById('addErrorMessage');
        const addModalEl = document.getElementById('addProductModal');
        const addModal = bootstrap.Modal.getOrCreateInstance(addModalEl);

        addForm.addEventListener('submit', function (e) {
            // Reset error message
            addError.classList.add('d-none');

            const name = addForm.querySelector('[asp-for="NewProduct.ProductName"]').value.trim();
            const quantity = addForm.querySelector('[asp-for="NewProduct.Quantity"]').value;
            const price = addForm.querySelector('[asp-for="NewProduct.Price"]').value;

            if (name === '' || quantity === '' || price === '' || price <= 0) {
                e.preventDefault(); 
                addError.classList.remove('d-none');
                return false;
            }

            
        });

        // Optional: Clear error when modal closes
        addModalEl.addEventListener('hidden.bs.modal', function () {
            addError.classList.add('d-none');
            addForm.reset();
        });

        
        const editModal = document.getElementById('editProductModal');
        editModal.addEventListener('show.bs.modal', function (event) {
            const btn = event.relatedTarget;
            document.getElementById("EditProduct_id").value = btn.dataset.id;
            document.getElementById("EditProduct_ProductName").value = btn.dataset.name;
            document.getElementById("EditProduct_Quantity").value = btn.dataset.qty;
            document.getElementById("EditProduct_Price").value = btn.dataset.price;
        });
    </script>
}
